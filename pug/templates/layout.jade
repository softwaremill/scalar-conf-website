    block content


    block organizer-team
      section#organizer.organizer.row
        a.to-top(data-scroll, href="#top")
          img(src="images/icons/to-top.svg")
          br
          | to top
        div.small-12.medium-8.medium-centered.large-8.large-centered.columns
          header.section-title
            h1 Team
            small Organized by
               a(href="https://softwaremill.com/") Softwaremill.com

    block footer
      div.contact-links.row
        div.small-12.medium-4.large-4.columns
          a(href="mailto:typeville@typeville.io")
            img(src='images/icons/email.svg')
            |&nbsp;typeville@typeville.io
        div.small-12.medium-4.large-4.columns
          a(href="https://twitter.com/typevilleconf")
            img(src='images/icons/twitter.svg')
            |&nbsp;@typevilleconf
        div.small-12.medium-4.large-4.columns
          a(href="https://www.facebook.com/TypeVille")
